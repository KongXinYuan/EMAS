#pager div.pages {
	display: block;
	border: none;
	text-transform: uppercase;
	font-size: 10px;
	/* margin: 10px 0 10px;  */
	padding: 2px;
}
/*Download by http://www.codefans.net*/

div.pages span {
	list-style: none;
	float: left;
	border: 1px solid #ccc;
	text-decoration: none;
	margin: 0 5px 0 0;
	padding: 5px; 
}

div.pages span:hover {
	border: 1px solid #003f7e;
}

div.pages span.pgEmpty {
	border: 1px solid #eee;
	color: #eee;
}

div.pages span.pgCurrent {
	border: 1px solid #003f7e;
	color: #000;
	font-weight: 700;
	background-color: #eee;
}